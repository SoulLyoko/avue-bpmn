{
  "extends": "@vue/tsconfig/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["es2017", "dom"],
    "paths": {
      "@/*": ["src/*"],
      "~/*": ["packages/*"],
      "avue-bpmn": ["packages"],
      "avue-bpmn/*": ["packages/*"]
    },
    "types": ["vitest/globals"]
  },
  "include": ["packages", "packages/.vitepress/**/*", "src", "types"],
  "exclude": ["packages/.vitepress/dist"]
}
